<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Detalle del Caso | Sentinel</title>

    <link href="/css/theme.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .card-info {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Tabla_Gestor">
                SENTINEL
            </a>

            <div class="ms-auto">
                <a href="/Perfil" class="nav-link text-white d-inline">Perfil</a>
                <a href="/logout" class="btn btn-danger btn-sm ms-3">Cerrar sesión</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">

        <!-- Información del caso -->
        <div class="card-info mb-4">
            <h3 class="mb-3"><i class="fa fa-folder-open"></i> Información del Caso</h3>

            <p><strong>ID Consulta:</strong> <%= caso.id_consulta %></p>
            <p><strong>RUT Cliente:</strong> <%= caso.rut_cliente %></p>
            <p><strong>Nombre Cliente:</strong> <%= caso.nombre_cliente %></p>
            <p><strong>Correo:</strong> <%= caso.correo_cliente %></p>
            <p><strong>Estado:</strong> 
                <% if (caso.estado) { %>
                    <span class="badge bg-success">Activo</span>
                <% } else { %>
                    <span class="badge bg-danger">Inactivo</span>
                <% } %>
            </p>
        </div>

        <!-- Historial -->
        <div class="card-info">

            <h4><i class="fa fa-clock"></i> Historial de Detalles</h4>

            <% if (detalles.length === 0) { %>
                <div class="alert alert-info mt-3">
                    Este caso no tiene detalles aún.
                </div>
            <% } %>

            <ul class="list-group mt-3">
                <% detalles.forEach(d => { %>
                    <li class="list-group-item">
                        <strong><%= d.fecha.toISOString().split('T')[0] %></strong><br>
                        <%= d.detalle %>
                    </li>
                <% }) %>
            </ul>

            <a href="/Tabla_Gestor?section=tabla" class="btn btn-secondary mt-4">Volver</a>

        </div>

    </div>

</body>

</html>
