<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <title>Panel Admin | Sentinel</title>
  <link href="/css/theme.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand">SENTINEL - Admin</a>
      <div>
        <a class="btn btn-outline-light me-2" href="/reporte">Reporte</a>
        <a class="btn btn-secondary" href="/logout">Cerrar sesión</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3>Usuarios</h3>
      <div>
        <a href="/usuario/nuevo" class="btn btn-primary">+ Nuevo Usuario</a>
      </div>
    </div>

    <table class="table table-striped">
      <thead>
        <tr><th>ID</th><th>Nombre</th><th>Correo</th><th>Rol</th><th>Activo</th><th>Acciones</th></tr>
      </thead>
      <tbody>
        <% usuarios.forEach(u => { %>
          <tr>
            <td><%= u.id_usuario %></td>
            <td><%= u.nombre_usuario %></td>
            <td><%= u.correo_usuario %></td>
            <td><%= u.rol %></td>
            <td><%= u.activo ? 'Sí' : 'No' %></td>
            <td>
              <a href="/usuario/editar/<%= u.id_usuario.trim() %>" class="btn btn-sm btn-warning">Editar</a>
              <a href="/usuario/eliminar/<%= u.id_usuario.trim() %>" class="btn btn-sm btn-danger" onclick="return confirm('Eliminar usuario?')">Eliminar</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
