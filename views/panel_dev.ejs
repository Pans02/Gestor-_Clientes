<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <title>Panel Dev | Sentinel</title>
  <link href="/css/theme.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand">SENTINEL - Dev</a>
      <div>
        <a class="btn btn-secondary" href="/logout">Cerrar sesión</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h3>Panel de desarrollador</h3>

    <div class="row">
      <div class="col-md-6">
        <div class="card card-theme p-3">
          <h5>Estadísticas</h5>
          <canvas id="chartCasos"></canvas>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card card-theme p-3">
          <h5>Acciones Rápidas</h5>
          <a href="/Tabla_Gestor" class="btn btn-primary mb-2">Ver Casos</a>
          <a href="/panel_admin" class="btn btn-outline-primary mb-2">Ir Admin</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Gráfico demo - los datos los puedes inyectar desde el servidor
    const ctx = document.getElementById('chartCasos').getContext('2d');
    const chart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun'],
        datasets: [{
          label: 'Casos nuevos',
          data: [12, 19, 7, 14, 10, 21]
        }]
      },
      options: { responsive: true }
    });
  </script>
</body>
</html>
