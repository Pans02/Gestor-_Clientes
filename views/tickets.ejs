<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Tickets de Soporte</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

    <style>
        body { background: #f4f6f9; }
        .box { background:white;padding:20px;border-radius:8px; }
    </style>
</head>

<body>

<nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <span class="navbar-brand">Sentinel | Tickets de Soporte</span>
        <div>
            <a href="/tickets/nuevo" class="btn btn-primary me-2">Nuevo Ticket</a>
            <a href="/Tabla_Gestor" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</nav>

<div class="container mt-4 box">

    <h3>Listado de Tickets</h3>

    <table id="tablaTickets" class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Creador</th>
                <th>Asignado</th>
                <th>Prioridad</th>
                <th>Estado</th>
                <th>Fecha</th>
                <th>Acción</th>
            </tr>
        </thead>

        <tbody>
            <% tickets.forEach(t => { %>
                <tr>
                    <td><%= t.id_ticket %></td>
                    <td><%= t.titulo %></td>
                    <td><%= t.creador %></td>
                    <td><%= t.asignado ? t.asignado : "Sin asignar" %></td>
                    <td><%= t.prioridad %></td>
                    <td><%= t.estado %></td>
                    <td><%= t.fecha_creacion.toISOString().split("T")[0] %></td>

                    <td>
                        <a href="/tickets/detalle/<%= t.id_ticket %>" class="btn btn-sm btn-info">
                            Ver
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>

<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
    new DataTable('#tablaTickets');
</script>

</body>
</html>
