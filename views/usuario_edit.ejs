<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <title>Editar Usuario</title>
  <link href="/css/theme.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4 card-theme p-4">
    <h3>Editar Usuario</h3>
    <form action="/usuario/editar/<%= usuario.id_usuario.trim() %>" method="POST">
      <div class="mb-3">
        <label>Nombre</label>
        <input name="nombre_usuario" class="form-control" value="<%= usuario.nombre_usuario %>" required>
      </div>
      <div class="mb-3">
        <label>Correo</label>
        <input name="correo_usuario" class="form-control" value="<%= usuario.correo_usuario %>" required>
      </div>
      <div class="mb-3">
        <label>Nueva contrase√±a (dejar en blanco para no cambiar)</label>
        <input type="password" name="password_usuario" class="form-control">
      </div>
      <div class="mb-3">
        <label>Rol</label>
        <select name="rol_id" class="form-select">
          <% roles.forEach(r => { %>
            <option value="<%= r.id %>" <%= (r.id === usuario.rol_id ? 'selected' : '') %>><%= r.nombre %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3 form-check">
        <input type="checkbox" name="activo" class="form-check-input" id="activo" <%= usuario.activo ? 'checked' : '' %>>
        <label class="form-check-label" for="activo">Activo</label>
      </div>
      <button class="btn btn-primary">Guardar</button>
      <a href="/panel_admin" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>
</body>
</html>
