<!doctype html>
<html>
<head>
  <title>Nuevo Usuario</title>
  <link href="/css/theme.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4 card-theme">
    <h3>Crear Usuario</h3>
    <form action="/usuario/nuevo" method="POST">
      <div class="mb-3">
        <label>ID (10 chars max)</label>
        <input name="id_usuario" class="form-control" maxlength="10" required>
      </div>
      <div class="mb-3">
        <label>Nombre</label>
        <input name="nombre_usuario" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Correo</label>
        <input name="correo_usuario" type="email" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Contrase√±a</label>
        <input name="password_usuario" type="password" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Rol</label>
        <select name="rol_id" class="form-select">
          <% roles.forEach(r => { %>
            <option value="<%= r.id %>"><%= r.nombre %></option>
          <% }) %>
        </select>
      </div>
      <button class="btn btn-primary">Crear</button>
      <a href="/panel_admin" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>
</body>
</html>
